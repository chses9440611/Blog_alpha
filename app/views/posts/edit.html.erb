<div class="edit">
	<%= stylesheet_link_tag "posts" %>
	<%= form_for @post, :url => post_path(@post), :method => :patch do |f| %>
		<p>
			<%= f.label :title, "Title" %></br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :body, "Body" %></br>
			<%= f.text_area :body %></br>
		</p>

		<%= f.submit "Update" %>
	<% end %>
</div>
